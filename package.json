{
  "name": "drachenboot-app",
  "version": "3.7.1",
  "private": true,
  "scripts": {
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d && sleep 2 && npx prisma migrate dev",
    "db:studio": "npx prisma studio",
    "dev": "next dev --turbo",
    "build": "NODE_ENV=production prisma migrate deploy && NODE_ENV=production next build --turbo",
    "start": "NODE_ENV=production next start",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "NODE_ENV=test jest --maxWorkers=10",
    "test:watch": "jest --watch --maxWorkers=1",
    "validate": "npm-run-all --parallel typecheck lint test",
    "email": "email dev --dir src/emails --port 3010",
    "postinstall": "prisma generate",
    "prepare": "husky"
  },
