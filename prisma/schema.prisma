generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  weight        Float?
  createdAt     DateTime  @default(now())
  
  // User preferences
  theme         String?   // 'light', 'dark', 'system'
  language      String?   // 'de', 'en'
  activeTeamId  String?   // Last selected team ID
  toursSeen     String[]  @default([]) // List of tours seen by the user
  
  accounts      Account[]
  sessions      Session[]
  paddlers      Paddler[]
  dismissedInfoCards DismissedInfoCard[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  CAPTAIN
  PADDLER
}

model Paddler {
  id          String   @id @default(cuid())
  name        String
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  teamId      String?
  team        Team?    @relation(fields: [teamId], references: [id], onDelete: Cascade)
  weight      Float
  skills      String[] // ['drum', 'steer', 'left', 'right', etc.]
  role        Role     @default(PADDLER)
  isGuest     Boolean  @default(false)
  inviteEmail String?  // Email for invited but not-yet-registered users
  inviteLanguage String? // Language preference for the invite (en/de)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  attendances Attendance[]
  assignments Assignment[]

  @@index([userId])
  @@index([teamId])
}

model Event {
  id            String   @id @default(uuid())
  title         String
  teamId        String?
  team          Team?    @relation(fields: [teamId], references: [id], onDelete: Cascade)
  date          DateTime
  comment       String?
  type          String   @default("training") // "training" | "regatta"
  boatSize      String   @default("standard") // "standard" | "small"
  canisterCount Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  externalUid   String? // UID from iCal

  attendances Attendance[]
  assignments Assignment[]

  @@index([teamId])
  @@index([date])
  @@unique([teamId, externalUid])
}

model Attendance {
  id        String   @id @default(cuid())
  eventId   String
  paddlerId String
  status    String   // 'yes', 'no', 'maybe'
  
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  paddler   Paddler  @relation(fields: [paddlerId], references: [id], onDelete: Cascade)

  @@unique([eventId, paddlerId])
  @@index([eventId])
  @@index([paddlerId])
}

model Assignment {
  id         String   @id @default(cuid())
  eventId    String
  seatId     String
  paddlerId  String?
  isCanister Boolean  @default(false)

  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  paddler   Paddler? @relation(fields: [paddlerId], references: [id], onDelete: Cascade)

  @@unique([eventId, seatId])
  @@index([eventId])
}

model Team {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  paddlers Paddler[]
  events   Event[]

  // Metadata
  website   String?
  icon      String?  @db.Text
  instagram String?
  facebook  String?
  twitter   String?
  email     String?

  // Subscription / Plan
  plan               String   @default("FREE") // 'FREE', 'PRO', 'ENTERPRISE'
  subscriptionStatus String?  // 'active', 'trialing', 'past_due'
  stripeCustomerId   String?  @unique
  billingUserId      String?  // User who purchased/manages the subscription
  maxMembers         Int      @default(25)

  // PRO Customization
  primaryColor       String?  @default("amber")
  showProRing        Boolean  @default(true)
  showProBadge       Boolean  @default(true)
  showWatermark      Boolean  @default(true)

  // Public Visibility
  showOnWebsite      Boolean  @default(false)

  // MCP Server API Keys
  apiKeys            ApiKey[]

  // iCal Integration
  icalUrl            String?
  syncLogs           SyncLog[]
}

model SyncLog {
  id           String   @id @default(cuid())
  teamId       String
  team         Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  status       String   // 'SUCCESS' | 'ERROR'
  createdCount Int
  updatedCount Int
  deletedCount Int      @default(0)
  details      String[]
  error        String?  @db.Text
  createdAt    DateTime @default(now())

  @@index([teamId])
  @@index([createdAt])
}

model EmailQueue {
  id        String   @id @default(cuid())
  to        String[]
  subject   String
  body      String   @db.Text // Rendered HTML
  from      String?
  replyTo   String?
  template  String?  // For debugging/logging
  props     Json?    // Template props for debugging
  status    String   @default("pending") // pending, processing, sent, failed
  attempts  Int      @default(0)
  lastError String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}


model DismissedInfoCard {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  cardId    String   
  createdAt DateTime @default(now())

  @@unique([userId, cardId])
  @@index([userId])
}

model ApiKey {
  id        String   @id @default(cuid())
  hashedKey String   @unique
  displayKey String   // Partial key for display (e.g. "dbm_...a1b2")
  name      String   // User-friendly name like "Claude Desktop" or "Development"
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  lastUsed  DateTime?
  createdAt DateTime @default(now())

  @@index([teamId])
  @@index([hashedKey])
}

model McpSession {
  id        String   @id // The Session UUID (provided by client or generated on server)
  apiKeyHash String   @map("api_key_hash") // Hashed version of the API Key for security lookups
  
  // Note: We avoid relation to ApiKey model for performance/simplicity in this high-throughput table,
  // preventing a JOIN on every heartbeat if not strictly needed. 
  // But verifying the key is valid is done via `validateApiKey`.
  
  createdAt DateTime @default(now())
  expiresAt DateTime? // Optional: for cleanup jobs

  @@index([apiKeyHash])
}
